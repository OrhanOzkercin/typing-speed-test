generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestResult {
  id             String   @id @default(cuid())
  wpm            Int
  accuracy       Int
  correctWords   Int
  totalTypedWords Int
  difficulty     String
  createdAt      DateTime @default(now())

  @@index([createdAt])
  @@index([wpm])
}
